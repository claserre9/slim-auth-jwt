{
  "require": {
    "php": "7.4.3",
    "slim/slim": "^4.12",
    "doctrine/orm": "^2.17",
    "doctrine/dbal": "^3.7",
    "symfony/yaml": "^5.4",
    "symfony/cache": "^5.4",
    "doctrine/annotations": "^2.0",
    "php-di/php-di": "^6.4.0",
    "slim/psr7": "^1.6",
    "ext-json": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpstan"
    ],
    "phpunit": "phpunit",
    "phpcs": "phpcs",
    "phpstan": "phpstan --memory-limit=-1"
  }
}
